{
  "manifest_version": 3,
  "name": "Qooky - AI Curator Demo",
  "version": "2.0",
  "description": "프롬프트 입력이 가능한 큐키 시연용 프로토타입",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://watcha.com/*", "*://www.watcha.com/*"],
  "web_accessible_resources": [
    {
      "resources": ["app.html", "style.css", "app.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://watcha.com/*", "*://www.watcha.com/*"],
      "js": ["content.js"]
    }
  ]
}