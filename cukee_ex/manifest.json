{
  "manifest_version": 3,
  "name": "cukee - 나만의 영화 전시회",
  "version": "1.0",
  "description": "OTT 플랫폼 위에 떠있는 나만의 AI 큐레이터",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://watcha.com/*", "https://www.watcha.com/*"],
  "content_scripts": [
    {
      "matches": ["https://watcha.com/*", "https://www.watcha.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["app.html", "style.css", "app.js"],
      "matches": ["<all_urls>"]
    }
  ]
}