{
  "manifest_version": 3,
  "name": "Cukee - 큐레이터 키우기",
  "version": "1.0.0",
  "description": "왓챠 오버레이 큐레이션: 영화 추천 서비스",
  "action": {
    "default_title": "Cukee 열기",
    "default_icon": {
      "16": "cookie.png",
      "48": "cookie.png",
      "128": "cookie.png"
    }
  },
  "icons": {
    "16": "cookie.png",
    "48": "cookie.png",
    "128": "cookie.png"
  },
  "permissions": [
    "storage", 
    "activeTab", 
    "scripting",
    "cookies" 
  ],
  "host_permissions": [
    "https://watcha.com/*",
    "https://pedia.watcha.com/*",
    "http://localhost:3000/*" 
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "cara/*",
        "ticket/*",
        "cookie.png",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}