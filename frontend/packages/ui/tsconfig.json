{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "./dist",        // 결과물을 dist 폴더에 저장해라
    "rootDir": "./src",        // 소스 코드는 src 폴더에 있다
    "declaration": true,       // .d.ts (타입 정의) 파일도 만들어라
    "noEmit": false,           // (중요) 파일 생성을 막지 마라!

    "jsx": "react-jsx",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
